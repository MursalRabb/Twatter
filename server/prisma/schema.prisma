datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  firstname String
  lastname  String?
  username  String  @unique
  email     String  @unique
  password  String

  isActive Boolean @default(false)

  posts Post[] @relation(name: "postuser")
  liked_posts Post[]  @relation(name: "postlikes")

  // token Token?
}

